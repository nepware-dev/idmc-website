            {% endif %}
            {% if get.search_api_fulltext is not empty %}
              <span data-field-name="search_api_fulltext" class="filter-term">{{ get.search_api_fulltext }} <i title="Remove" class="fa fa-remove remove-filter-icon"></i></span>
