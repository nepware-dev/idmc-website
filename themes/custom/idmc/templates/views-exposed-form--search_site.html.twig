          {% endif %}
      </div>
      <div class="col-sm-12 col-md-6 col-lg-6 text-right">
        {% if is_mobile %}
        {% else %}
        {{ form.search_api_fulltext }} {{ form.actions }}
        {% endif %}
      </div>
    </div>
  </div>
  <div class="container form-sort-by">
    <div class="row">
      <div class="col-sm-12 col-md-6">
        <div class="form-sort-by-label">Order by:</div>
        <div class="form-sort-by-control">
          {% if is_mobile %}
          {% else %}
            {{ form.sort_by }}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
